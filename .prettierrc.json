{
	"plugins": ["@ianvs/prettier-plugin-sort-imports", "prettier-plugin-tailwindcss"],
	"importOrder": ["^@core/(.*)$", "", "^@server/(.*)$", "", "^@ui/(.*)$", "", "^[./]"],
	"importOrderParserPlugins": ["typescript", "jsx", "decorators-legacy"],
	"arrowParens": "always",
	"bracketSpacing": true,
	"printWidth": 120,
	"proseWrap": "always",
	"semi": true,
	"singleQuote": false,
	"tabWidth": 2,
	"useTabs": true
}
